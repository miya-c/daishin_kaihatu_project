function calculateThreshold(previousReading, previousPreviousReading, threeTimesPreviousReading) {
  try {
    // å±¥æ­´ãƒ‡ãƒ¼ã‚¿ã®æº–å‚™ï¼ˆæŒ‡ç¤ºæ•°ãƒ™ãƒ¼ã‚¹ï¼‰
