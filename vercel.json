{
  "buildCommand": null,
  "devCommand": null,
  "installCommand": null,
  "outputDirectory": null,
  "public": true,
  "functions": {},
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/property_select",
      "destination": "/html_files/main_app/property_select.html"
    },
    {
      "source": "/room_select", 
      "destination": "/html_files/main_app/room_select.html"
    },
    {
      "source": "/meter_reading",
      "destination": "/html_files/main_app/meter_reading.html"
    },
    {
      "source": "/((?!css_styles|csv|gas_scripts|html_files|manifest\\.json|service-worker\\.js|pwa-utils\\.js|.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed", 
          "value": "/"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
